{
  "version": 2,
  "framework": "vite",
  "installCommand": "npm install",
  "buildCommand": "npm run build",
  "outputDirectory": "client/dist",
  "env": {
    "SERVE_CLIENT_FROM_API": "false"
  },
  "functions": {
    "api/index.mjs": {
      "includeFiles": "server/src/**"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.mjs"
    }
  ]
}
