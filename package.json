{
  "name": "builtattic-dashboard-monorepo",
  "private": true,
  "scripts": {
    "postinstall": "npm --prefix client install && npm --prefix server install",
    "client": "npm --prefix client run dev",
    "server": "npm --prefix server run dev || npm --prefix server start",
    "dev": "concurrently -n client,server -c auto \"npm:client\" \"npm:server\"",
    "seed:marketplace": "npm --prefix server run seed:marketplace",
    "seed:users": "npm --prefix server run seed:users",
    "seed:superadmin": "npm --prefix server run seed:superadmin"
  },
  "devDependencies": {
    "concurrently": "^9.0.1"
  },
  "dependencies": {
    "fuse": "^0.12.1",
    "mongodb": "^6.20.0"
  }
}
